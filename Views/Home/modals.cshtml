@{ 
    int custid = 0;
}
<!-- add to cart notification -->
<div class="modal fade" id="shoping-cart" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div>
            <div class="modal-content">
                <div class="modal-header">
                    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="modal-table">
                        <tr>
                            <td class="text-left">
                                <h4>
                                    <strong>Shopping Cart</strong>
                                </h4>
                            </td>
                            <td class="text-right">
                                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">
                                    <span class="fa fa-times-circle-o"></span>
                                </button>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="modal-body">
                    <ngcart-cart></ngcart-cart>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
</div>
<!-- /.modal-dialog -->
<!-- add to cart notification -->
<div class="modal fade" id="cart-login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="container">
            <div class="row" ng-controller="loginController">
                <!-- Login -->
                <div ng-show="!customer" class="col-md-6">
                    <div id="loginbox" class="mainbox">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <div class="panel-title">Sign In</div>
                                <div style="float:right; font-size: 80%; position: relative; top:-10px;">
                                    <a href="#" class="panel-title" onclick="showforget();">Forgotten password?</a>
                                    <button type="button" class="btn btn-danger btn-sm" style="margin-top:-20px;margin-left:25px" data-dismiss="modal">
                                        <span class="fa fa-times"></span>
                                    </button>
                                </div>
                            </div>
                            <div style="padding-top:30px" class="panel-body">
                                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                                <form name="loginform" ng-submit="login()" id="loginform" class="form-horizontal" role="form" method="post">
                                    <input type="hidden" name="lrem" id="lrem" value="0" />
                                    <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user"></i>&nbsp;&nbsp;Email&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                                        <input id="login-username" type="text" class="form-control" ng-model="user.username" name="username" placeholder="username or email">
                                    </div>
                                    <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock"></i> Password</span>
                                        <input id="login-password" type="password" class="form-control" ng-model="user.password" name="password" placeholder="password">
                                    </div>
                                    <div style="margin-top:10px" class="form-group">
                                        <div class="col-sm-12 controls">
                                            <input type="submit" id="submit" value="Login" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12 control">
                                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                                Don't have an account!
                                                <a href="#" onclick="showsignup(); return false;">
                                                    Sign Up Here
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div id="forgetbox" style="display:none;" class="mainbox">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <div class="panel-title">Forgotten password</div>
                                <div style="float:right; font-size: 80%; position: relative; top:-10px;">
                                    <a href="#" onclick="showsignin(); return false;">Sign in</a>
                                    <button type="button" class="btn btn-danger btn-sm" style="margin-top:-10px;margin-left:25px" data-dismiss="modal">
                                        <span class="fa fa-times"></span>
                                    </button>
                                </div>
                            </div>
                            <div style="padding-top:30px" class="panel-body">
                                <form name="forgetform" id="forgetform" class="form-horizontal" role="form" method="post">
                                    <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user"></i> Enter Email</span>
                                        <input id="forget-email" type="text" class="form-control" name="forget-email" value="" placeholder="username or email">
                                    </div>
                                    <div style="margin-top:10px" class="form-group">
                                        <div class="col-sm-8 controls">
                                            <div style="display:none;" id="forget-alert" class="alert alert-success col-sm-12"></div>
                                        </div>
                                        <div class="col-sm-4 controls">
                                            <a id="btn-login" href="#" onclick="forget(); return false;" class="btn btn-success">Send Email  </a>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12 control">
                                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                                Don't have an account!
                                                <a id="btn-signup" href="#" onclick="showsignup(); return false;">
                                                    Sign Up Here
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div id="signupbox" style="display:none;" class="mainbox">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <div class="panel-title">Sign Up</div>
                                <div style="float:right; font-size: 85%; position: relative; top:-10px">
                                    <a id="signinlink" style="color: #fff" href="#" onclick="showsignin(); return false;">Sign In</a>
                                    <button type="button" class="btn btn-danger btn-sm" style="margin-top:-10px;margin-left:25px" data-dismiss="modal">
                                        <span class="fa fa-times"></span>
                                    </button>
                                </div>
                            </div>
                            <div class="panel-body">
                                <form name="signupform" class="form-horizontal">
                                    <div class="form-group">
                                        <label for="email" class="col-md-3 control-label">Email</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="semail" name="semail" placeholder="Email Address">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="title" class="col-md-3 control-label">Title</label>
                                        <div class="col-md-9">
                                            <select name="title" id="title" class="form-control">
                                                <option>Select</option>
                                                <option> Ms</option>
                                                <option>Mr</option>
                                                <option>Miss</option>
                                                <option>Mrs</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="firstname" class="col-md-3 control-label">Full Name</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="firstname" name="firstname" placeholder="First Name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="lastname" class="col-md-3 control-label">Company</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Last Name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="password" class="col-md-3 control-label">Password</label>
                                        <div class="col-md-9">
                                            <input type="password" class="form-control" name="passwd" id="passwd" placeholder="Password">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="password" class="col-md-3 control-label">Retype Password</label>
                                        <div class="col-md-9">
                                            <input type="password" class="form-control" name="passwdr" id="passwdr" placeholder="Password">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="icode" class="col-md-3 control-label">How did you find us?</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="agent" id="agent" placeholder="How did you find us?">
                                        </div>
                                    </div>
                                    <div id="signup-alert" style="display:none" class="alert alert-success">
                                        <p>Error:</p>
                                        <span></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-3 col-md-9">
                                            <a id="btn-signup" onclick="signup(); return true;" class="btn btn-success">
                                                <i class="icon-hand-right"></i> &nbsp Sign Up
                                            </a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Logged in -->
                <div class="col-md-6" ng-show="customer" style="color:black;background-color:darkgray;">
                    <div class="row">
                        <div class="col-md-9" style="padding:15px;">
                            Welcome <b>{{custname}}</b>
                            <button type="button" class="btn btn-danger btn-sm" style="margin-top:-10px;margin-left:100px" data-dismiss="modal">
                                <span class="fa fa-times"></span>
                            </button>
                        </div>
                    </div>
                    <ul class="nav navbar-nav navbar-blue-dark">
                        <li>
                            <a href="/account/SuperMasks" class="btn btn-default account-border">
                                <i class="fa fa-user fa-3x" aria-hidden="true"></i> &nbsp;Account Details
                            </a>
                        </li>
                        <li>
                            <a href="/orders/SuperMasks" class="btn btn-default account-border">
                                <i class="fa fa-cart-plus fa-3x" aria-hidden="true"></i> &nbsp;Recent Orders
                            </a>
                        </li>
                        <li>
                            <a href="#" ng-click="logout()" class="btn btn-default account-border">
                                <i class="fa fa-sign-out fa-3x" aria-hidden="true"></i> &nbsp;Customer Logout
                            </a>
                        </li>
                    </ul>
                    <div class="raw vs10">
                        <hr>
                        <table id="orders" class="table table-striped table-hover">
                            <thead>
                                <tr class="success">
                                    <th>#</th>
                                    <th>Order No</th>
                                    <th>Amount</th>
                                    <th>Vat</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="x in orders | limitTo:5">
                                    <td>{{$index+1}}</td>
                                    <td>{{x.orderid}}</td>
                                    <td>{{x.amount | currency:"&pound;"}}</td>
                                    <td>{{x.vat | currency:"&pound;"}}</td>
                                    <td>{{x.entrydate}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>                
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
</div>